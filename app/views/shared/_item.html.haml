- items.each do |item|
  .main-box__items__row--item-box
  - count = 0
  - item.images.each do |image|
    =link_to '#' do
      = image_tag((image.file), width: '213', height: '213')
      .main-box__items__row--item-box--body
        %h4
        = item.name
        .main-box__items__row--item-box--body--price
          ¥
          = item.price
          %p (税込)
    - count += 1
    - if count == 1 then
      - break
