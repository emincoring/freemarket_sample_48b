.wrapper
  .sign-up-header
    %span
      =link_to image_tag("mercari_logo_color.svg"), "root_path", class: "sign-up-logo"
  .single-main
    .single-main-container
      %h2.single-main-container__head 新規会員登録
      .single-main-container__inner
        .single-main-container__inner--content
          = link_to "/users/sign_up/registration" ,class: 'btn-default btn-mail' do
            %span メールアドレスで登録
            %i.far.fa-envelope

          = link_to '#' ,class: 'btn-default btn-sns-facebook' do
            %strong Facebookで登録

          = link_to '#', class: "btn-default btn-sns-google" do
            %i.fab.fa-google.goole-icon
            %em Googleで登録

  .single-footer
    .nav
      %ul.clearfix
        %li
          = link_to 'プライバシーポリシー','#'
        %li
          = link_to 'メルカリ利用規約','#'
        %li
          = link_to '特定商取引に関する表記','#'

    .single-footer-logo
      = link_to image_tag('fooer-logo-gray.svg'), '#', class: 'footer-gray-logo'
    %p
      %small
        © 2019 Mercari
