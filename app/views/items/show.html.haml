.wrapper
  =render "shared/header"
  =render 'shared/item-detail-breadcrumbs'

  .items-box-container
    .item-name
      %h1= @item.name

    .item-main-content
      .item-main-content__images
        .image-main
          = image_tag("#{@item.images[0].file[0].url}", width: '300', height: '300')
        .image-low
          .image-small
            - @item.images[0].file.each do |file|
              = image_tag("#{file.url}", width: '75', height: '75', class:'small-image')

      %table.item-main-content__detail-table
        %tr
          %th 出品者
          %td
            =link_to "#" do
              %p あざおさん
            .rating
              .rating-good
                %i.fas.fa-grin
                100
              .rating-normal
                %i.fas.fa-meh
                0
              .rating-bad
                %i.fas.fa-frown
                0
        %tr
          %th カテゴリー
          %td
            =link_to '#' do
              %span ベビー・キッズ
              %br
              %i.fas.fa-chevron-right
              %span キッズ服
              %br
              %i.fas.fa-chevron-right
              %span トップス（その他）
        %tr
          %th ブランド
          %td
            =link_to '#' do
              %p=@item.brand
        %tr
          %th サイズ
          %td=@item.size
        %tr
          %th 商品の状態
          %td=@item.condition
        %tr
          %th 配送料の負担
          %td=@delivery.payer
        %tr
          %th 配送の方法
          %td=@delivery.method
        %tr
          %th 配送元地域
          %td
            =link_to '#' do
              %p=@delivery.area
        %tr
          %th 発送日の目安
          %td=@delivery.date


    .item-detail-price
      %span.item-detail-price--inclued-tax
        ¥
        = @item.price
      %span.item-detail-price--tax
        (税込)
      %span.item-detail-price--postage
        送料込み

    .item-buy__btn
      = link_to confirm_item_path(params[:id]), class: 'buy-btn' do
        %p 購入画面に進む

    .item-detail-description
      %p= @item.description

    .item-button-container
      .item-button-container-left
        .item-button-container__like
          %i.far.fa-heart
          %span いいね! 100
        .item-button-container__report
          = link_to '#', class: 'report-btn' do
            %i.far.fa-flag
            %span 不適切な商品の報告

      .item-button-container-right
        = link_to '#', class: 'report-btn' do
          %i.fas.fa-lock
          %span あんしん・あんぜんへの取り組み

  .items-detail-message__container
    .items-detail-message__body.clearfix
      .items-message-content
      = image_tag('user-icon.svg', class: 'user-face', width: '40', height: '40')
      .chatting
        .says
          %p こんにちわ
          .time
            %i.far.fa-clock
            %span 1日前

    .items-detail-message__body.clearfix
      .items-message-content
      = image_tag('user-icon.svg', class: 'user-face', width: '40', height: '40')
      .chatting
        .says
          %p こんにちわ
          .time
            %i.far.fa-clock
            %span 1日前

    .items-message-content
      %p 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
      = form_with do |f|
        = f.text_area :comment, type: 'input', class: 'message-content'
      .items-message-content__btn
        = link_to '#', class: 'messege-btn' do
          %span コメントする

  %ul.nav-item-link
    %li.nav-item-link__prev
      =link_to '#' do
        %i.fas.fa-chevron-left
        %span ディズニーヴィランズ 2個セット バッジ バッチ
    %li.nav-item-link__next
      =link_to '#' do
        %span 楽天パンダ ノート&マスキングテープセット
        %i.fas.fa-chevron-right

  .item-social-mediabox
    %ul.social-mediabox
      .facebook-square-box
        %li
          = link_to '#', class: 'facebook-icon' do
            %i.fab.fa-facebook-square
      .twitter-square-box
        %li
          = link_to '#', class: 'twitter-icon' do
            %i.fab.fa-twitter-square
      %li.pinterest-square-box
        = link_to '#', class: 'pinterest-icon' do
          %i.fab.fa-pinterest-square




  .items-user-box
    %section.items-user-box__items
      %h4
        =link_to "あざお"+"さんのその他の出品", "#"

      .items-user-box__items__row
        .items-user-box__items__row__userselling-item-box
          =link_to '#' do
            = image_tag 'item_sample.jpg', width: 220, height: 220
            .items-user-box__items__row__userselling-item-box--body
              %h5 ニコちゃんロングTシャツ 100
              .items-user-box__items__row__userselling-item-box--body--price
                ¥ 100
                %p (税込)

      .items-user-box__items__row
        .items-user-box__items__row__userselling-item-box
          =link_to '#' do
            = image_tag 'item_sample.jpg', width: 220, height: 220
            .items-user-box__items__row__userselling-item-box--body
              %h5 ニコちゃんロングTシャツ 100
              .items-user-box__items__row__userselling-item-box--body--price
                ¥ 100
                %p (税込)

      .items-user-box__items__row
        .items-user-box__items__row__userselling-item-box
          =link_to '#' do
            = image_tag 'list_item_example1.jpg', width: 220, height: 220
            .items-user-box__items__row__userselling-item-box--body
              %h5 ピカチュウ
              .items-user-box__items__row__userselling-item-box--body--price
                ¥ 100
                %p (税込)

