.wrapper

  = render 'shared/header'

  .container.clearfix

    = render 'leftbar'

    .main
      .content
        .head-profile
          %span プロフィール

      .mypage-profile
        = image_tag('mypage_background.jpg', width: "700", height: "156")
        .mypage-profile__face
          = image_tag('member_photo_noimage_thumb.png', class: "face", width: "60", height: "60")
        .mypage-profile__name
          = form_with do |f|
            = f.text_field :nickname, class: "profile-nickname", placeholder: 'あああ'

      .introduction
        .introduction__text
        = form_with do |f|
          = f.text_area :introduction, type: 'input', cols: "30", rows: "10", class: 'intro-text', placeholder: '（例）ああああああああああああああああああああああああああああああああああああああああああああああああああああああ'

        .introduction__btn
          = link_to '#', class: 'btn' do
            %p 変更する

  = render 'shared/sell-btn'
  = render "shared/app-banner"
  = render 'shared/footer'

